<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="nl.sandhoofd.contactenapp.Info">
    <include
        android:id="@+id/include"
        layout="@layout/layout_toolbar"></include>
    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="551dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="57dp"
        tools:layout_editor_absoluteX="8dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:text="Mijn contactgegevens:"
            android:textAlignment="center"
            android:textColor="@android:color/holo_green_light"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.016" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="57dp"
                android:layout_height="57dp"
                android:layout_weight="66.6"
                app:srcCompat="@mipmap/ic_mail" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="57dp"
                android:layout_weight="33.3"
                android:gravity="center_vertical|left"
                android:text="sandervhoogdalem@gmail.com"
                android:autoLink="email"

                android:textColor="@android:color/holo_green_light"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="81dp"
                tools:layout_editor_absoluteY="99dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="57dp"
                android:layout_height="57dp"
                android:layout_weight="12.56"
                app:srcCompat="@mipmap/ic_in" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="57dp"
                android:layout_weight="30.16"
                android:gravity="center_vertical|left"
                android:text="https://goo.gl/gke9Cv"
                android:autoLink="web"

                android:textColor="@android:color/holo_green_light"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="81dp"
                tools:layout_editor_absoluteY="99dp" />

        </LinearLayout>

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.00"
            android:text="Motivatie"
            android:textAlignment="center"
            android:textColor="@color/colorAccent"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Voordat ik begonnen ben met het ontwikkelen van apps, ben ik begonnen in PHP. Toen we op de opleiding begonnen met het maken van apps voor Android, sprak mij dat heel erg aan." />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Ik wil graag leren ontwikkelen in Android en mijn kennis blijven uitbreiden. Als je in het bezit bent van een Android telefoon, dan heb je jouw resultaten eigenlijk altijd bij de hand. Bijvoorbeeld wanneer je een planner maakt. Dat geeft mij een goed gevoel. " />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Naast dat ik het resultaat op mijn telefoon heb, wordt de doelgroep voor Android apps ook steeds groter. Met android apps kun je mensen blij maken en onderdelen uit hun dagelijks leven vereenvoudigen. Dat vind ik zo mooi aan Android." />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
